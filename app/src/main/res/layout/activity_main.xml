<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navigation_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/card_corners_top"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clipChildren="false"
            app:elevation="0dp"
            app:itemHorizontalTranslationEnabled="false"
            app:labelVisibilityMode="selected"
            app:menu="@menu/bottom_navigation">


        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_timer_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">


        <TextView
            android:id="@+id/preset_counter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="TextView"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/add_timer_preset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_add_black_30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/barTimer"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:progressDrawable="@drawable/custom_progress_bar"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/preset_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer_text_linear_layout"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/timer_text_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hour_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-thin"
                android:hint="00"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusLeft="@id/minute_timer_tv"
                android:nextFocusRight="@id/minute_timer_tv"
                android:nextFocusUp="@id/minute_timer_tv"
                android:nextFocusDown="@id/minute_timer_tv"
                android:nextFocusForward="@id/minute_timer_tv"
                android:selectAllOnFocus="true"

                android:singleLine="false"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text=":"
                android:textSize="65sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minute_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-thin"
                android:hint="00"
                android:inputType="number"
                android:maxLength="2"
                android:nextFocusLeft="@id/seconds_timer_tv"
                android:nextFocusRight="@id/seconds_timer_tv"
                android:nextFocusUp="@id/seconds_timer_tv"
                android:nextFocusDown="@id/seconds_timer_tv"
                android:nextFocusForward="@id/seconds_timer_tv"
                android:selectAllOnFocus="true"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:inputType="number"
                android:maxLength="2"
                android:text=":"
                android:textSize="65sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seconds_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-thin"
                android:hint="00"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="2"
                android:selectAllOnFocus="true"
                android:textSize="65sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_timer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="@string/start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_time_timer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1.5"
                android:text="@android:string/cancel" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/pause_time_timer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1.5"
                android:insetTop="6dp"
                android:insetBottom="6dp"
                android:text="pause" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linear_alarm_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/select_all_alarms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/all"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageButton
                    android:id="@+id/add_alarm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_black_30dp" />

                <ImageButton
                    android:id="@+id/settings_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:src="@drawable/ic_more_vert_black_30dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/title_alarm_app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:forceDarkAllowed="false"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="60sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/alarm_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Next alarm in 2 hrs "
                app:layout_constraintEnd_toEndOf="@+id/title_alarm_app_name"
                app:layout_constraintStart_toStartOf="@+id/title_alarm_app_name"
                app:layout_constraintTop_toBottomOf="@+id/title_alarm_app_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_alarm_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/card_corners_top"
            app:cardElevation="0dp">

            <ListView
                android:id="@+id/alarms_list_view"
                style="@android:style/Widget.ListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="0.75"
                android:divider="@null"
                android:elevation="0dp"
                android:scrollbarTrackVertical="@null"
                android:scrollbars="none"
                android:visibility="visible">

            </ListView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_empty_alarm_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="36dp"
                android:text="@string/empty_alarms_hint"
                android:textAlignment="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/alarm_empty_list_view"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_margin="8dp"
                android:contentDescription="@string/add_alarm"


                android:text="@string/add_alarm"
                android:visibility="visible"
                app:icon="@drawable/ic_add_black_24" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_worldClock"
        layout="@layout/content_world_clock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_stopwatch_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/stop_watch_list_card_view"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:backgroundTint="@color/transparent"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/card_corners_top"
            app:cardElevation="0dp"
            app:contentPadding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linear_stopwatch_button_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ListView
                android:id="@+id/lap_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="false"
                android:divider="@null"
                android:headerDividersEnabled="true"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackVertical="@null"
                android:scrollbars="none" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/stop_watch_list_card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/hour_stopwatch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-thin"
                android:maxLength="2"
                android:nextFocusLeft="@id/minute_timer_tv"
                android:nextFocusRight="@id/minute_timer_tv"
                android:nextFocusUp="@id/minute_timer_tv"
                android:nextFocusDown="@id/minute_timer_tv"
                android:nextFocusForward="@id/minute_timer_tv"
                android:singleLine="false"
                android:text="00"

                android:textSize="65sp" />

            <TextView
                android:id="@+id/dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text=":"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/minute_stopwatch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-thin"
                android:maxLength="2"
                android:nextFocusLeft="@id/seconds_timer_tv"
                android:nextFocusRight="@id/seconds_timer_tv"
                android:nextFocusUp="@id/seconds_timer_tv"
                android:nextFocusDown="@id/seconds_timer_tv"
                android:nextFocusForward="@id/seconds_timer_tv"
                android:text="00"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/dot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:maxLength="2"
                android:text="."
                android:textSize="65sp" />

            <TextView
                android:id="@+id/seconds_stopwatch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="sans-serif-thin"
                android:maxLength="2"
                android:text="00"
                android:textSize="65sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_stopwatch_button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_stop_watch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="@string/start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stop_time_stop_watch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1.5"
                android:text="@string/stop" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/lap_time_stop_watch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1.5"
                android:insetTop="6dp"
                android:insetBottom="6dp"
                android:text="@string/lap" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/linear_delete_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cancel_delete_mode"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:text="@string/cancel"
            android:visibility="visible"
            app:cornerRadius="@dimen/round_radius" />


        <Button
            android:id="@+id/delete_alarm_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:text="@string/delete"
            android:visibility="visible"
            app:cornerRadius="@dimen/round_radius"
            app:icon="@drawable/ic_delete_black_24dp"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:rippleColor="@color/error_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_mode_preset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cancel_delete_preset_mode"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:text="@string/cancel"
            android:visibility="visible"
            app:cornerRadius="@dimen/round_radius" />


        <Button
            android:id="@+id/delete_preset_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:text="@string/delete"
            android:visibility="visible"
            app:cornerRadius="@dimen/round_radius"
            app:icon="@drawable/ic_delete_black_24dp"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:rippleColor="@color/error_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_mode_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cancel_delete_world"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:text="@string/cancel"
            android:visibility="visible"
            app:cornerRadius="@dimen/round_radius" />


        <Button
            android:id="@+id/delete_world_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:text="@string/delete"
            android:visibility="visible"
            app:cornerRadius="@dimen/round_radius"
            app:icon="@drawable/ic_delete_black_24dp"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:rippleColor="@color/error_color" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
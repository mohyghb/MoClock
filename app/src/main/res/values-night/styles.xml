<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name= "AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_DarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_DarkMode</item>
        <item name="colorAccent">@color/colorAccent_DarkMode</item>
        <item name="android:navigationBarColor">@color/MaterialDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="imageButtonStyle">@style/MoImageButton_Style_Dark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">@color/MaterialDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="materialCardViewStyle">@style/CardView.MoclockStyle</item>
    </style>


    <style name="MoPresetCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MaterialGrey</item>
        <item name="cardElevation">@dimen/card_elevation_night</item>
    </style>

    <style name="MoImageButton_Style_Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/MoWhite_v3</item>
    </style>

    <style name="CardView.MoclockStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">5dp</item>
    </style>




</resources>